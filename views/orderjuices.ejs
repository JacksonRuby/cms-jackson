<%- include('_layouts/header') -%>
<main>
    <section>
        <h1>Order Juices</h1>
        <form method="POST" action="/orderjuices" class="form-login">
            <div class="form-field">
                <label for="name">Name:</label>
                <input type="text" class="form-input" name="name">
            </div>
            <div class="form-field">
                <label for="Phone">Phone:</label>
                <input type="text" class="form-input" name="phone">
            </div>
            <div class="form-field">
                <label for="mango">Mango Juices:</label>
                <input type="text" class="form-input" name="mango">
            </div>
            <div class="form-field">
                <label for="berry">Berry Juices:</label>
                <input type="text" class="form-input" name="berry">
            </div>
            <div class="form-field">
                <label for="apple">Apple Juices:</label>
                <input type="text" class="form-input" name="apple">
            </div>
            <div class="form-field">
                <input type="submit" class="form-submit" value="Submit">
            </div>           

            <% 
            if(typeof errorsData !== 'undefined'){
                for(var error of errorsData.errors){
                    %>
                    <h3><%= error.msg %></h3>
                    <%
                }
            }
            %>
        </form>  
    </section>
</main>
<%- include('_layouts/footer') -%>